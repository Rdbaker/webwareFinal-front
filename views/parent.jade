doctype html
// use english
html(lang="en")
  // the html head
  head
    // the title of the page
    title= 'Stock Rush'

    // vendor libraries
    script(type='text/javascript' src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(type='text/javascript' src='http://underscorejs.org/underscore.js')
    script(type='text/javascript' src='http://backbonejs.org/backbone.js')
    script(type='text/javascript' src='http://code.highcharts.com/highcharts.js')


    // source javascripts
    block scripts
      script(type='text/javascript' src='js/application.js')
      script(type='text/javascript' src='js/application/services/api_request_service.js')

    // css stylings
    block stylesheets
      link(rel='stylesheet' type='text/css' href='http://bootswatch.com/journal/bootstrap.min.css')
      link(rel='stylesheet' type='text/css' href='css/parent.css')

  // the body of the document
  body
    // the container div for the whole page
    .container
      // the navbar
      .navbar.navbar-inverse
        .navbar-header
          a.navbar-brand Stock Rush
        .navbar-collapse.collapse.navbar-responsive-collapse
          ul.nav.navbar-nav
            li#home-btn
              a(href='/home') Home
            li#stocks-btn
              a(href='/browse') Browse Stocks
          ul.nav.navbar-nav.navbar-right
            li#logout-btn
              form.hidden(method='post' action='/logout')
              a Logout
      // where the view will go
      block content

    include ./footer.jade
